# PORT: The port number on which the server will listen.
PORT=3000

# REDIS_URL: Connection string for the Redis instance used for caching and session storage.
REDIS_URL=redis://localhost:6379

# JWT_SECRET: Secret key used to sign and verify JSON Web Tokens for authentication.
JWT_SECRET=<your-jwt-secret>

# NODE_ENV: The environment in which the application is running. Possible values: development, production, test.
NODE_ENV=development

# DATABASE_URL: Connection string for the PostgreSQL database, including credentials and schema.
# Format: postgresql://<username>:<password>@<host>:<port>/<database>?schema=public
DATABASE_URL="postgresql://<username>:<password>@localhost:5432/<database>?schema=public"

# API_URL: The base URL for the API endpoints.
API_URL=http://localhost:3000

# CLIENT_COOKIE_KEY: Secret key used to sign client-side cookies.
CLIENT_COOKIE_KEY=<your-client-cookie-key>

# SERVER_COOKIE_KEY: Secret key used to sign server-side cookies.
SERVER_COOKIE_KEY=<your-server-cookie-key>